# update node packages
alias npm-update="ncu -u"

# install npm global packages
npmg="sudo npm install -g"
alias npm-packages="npmg typescript; npmg eslint; npmg gulp; npmg ncu; npmg nodemon"

# merge pdf files
alias pdf-merge="/System/Library/Automator/Combine\ PDF\ Pages.action/Contents/Resources/join.py"

# youtube to mp3
alias ytm="cd && youtube-dl --extract-audio --audio-format mp3 --prefer-ffmpeg --audio-quality 0 --embed-thumbnail"

# open dotfiles in VSCode
alias opendt="code dotfiles"

# open vscode with gpu
alias code="code --force-gpu-rasterization -r"
alias codeinsiders="code-insiders --force-gpu-rasterization -r"

#project folder
project_directory_path="/Users/siddiqui/Documents/Projects/"
alias prjdir="cd $project_directory_path"

# listnride
alias lnr="prjdir && cd listnride-frontend/"
alias c-lnr="lnr && cd listnride && gulp clean"
alias c-solution="lnr && cd listnride && gulp clean-lnr-shop-solution"
alias c-integration="lnr && cd listnride && gulp clean-lnr-shop-integration"
alias d-lnr="lnr && cd listnride && gulp deploy"
alias d-solution="lnr && cd listnride && gulp deploy-lnr-shop-solution"
alias d-integration="lnr && cd listnride && gulp deploy-lnr-shop-integration"

# create a local timemachine backup
alias backup="tmutil snapshot"

# use ccat by default 
alias cat=ccat

# check the directory size
 alias dirsize="m dir size"

# eject all mountable drives
alias ejectdrives="m disk ejectall"

# get mac basic info
alias macinfo="m info"

# lock the screen
alias lockscreen="m lock"

# avoid sleeping the mac for specified time
alias nosleep="m nosleep until"

# restart the mac
alias restartmac="m restart"

# shutdown the mac
alias shutdownmac="m shutdown"

# set volume of the mac
alias volumeset="m volume"

# mute volume of the mac
alias mutemac="m volume mute" 

# update the bash profile
alias bash-update="cd && source .bash_profile"

# quit all applications [excluding Safari and Terminal]
alias quit-all="open -a quit"

# reset dock 
alias reset-dock="defaults write com.apple.Dock autohide-delay -float 0 && killall Dock"

# Recursively delete anaconda cache files
alias cleanup="conda clean --all -y ; emptytrash"

# Empty the Trash on all mounted volumes and the main HDD
# Also, clear Appleâ€™s System Logs to improve shell startup speed
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"
alias trashclean="emptytrash"

# check battery status
alias batterycheck="GetBatteryPercentage"

# list of wifi 
alias wifi-list="airport -s"

# IP addresses
alias ip-global="dig +short myip.opendns.com @resolver1.opendns.com"
alias ip-local="ipconfig getifaddr en0"

# soundcloud download
alias soundcloud="scdl -l"

# open source tree at any directory
alias source-tree="open -a SourceTree"
# open source tree at current directory
alias source-tree-here="open -a SourceTree ."
